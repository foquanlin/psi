<template>
  <el-dialog
    :title="!dataForm.id ? '新增' : !disabled ? '修改' : '查看'"
    :close-on-click-modal="false" width="71%"
    :visible.sync="visible">
    <el-form :model="dataForm" :inline="true" :rules="dataRule" ref="dataForm" @keyup.enter.native="dataFormSubmit()" label-width="80px">
#foreach($column in $columns)
#if($column.columnName != $pk.columnName)
      <el-form-item label="${column.comments}" prop="${column.attrname}">
#if($column.attrType=='Integer')
        <el-input v-model="dataForm.${column.attrname}" :disabled="disabled" placeholder="${column.comments}" clearable type="number"></el-input>
    #elseif($column.attrType=='Long')
        <el-input v-model="dataForm.${column.attrname}" :disabled="disabled" placeholder="${column.comments}" clearable type="number"></el-input>
    #elseif($column.attrType=='Float')
        <el-input v-model="dataForm.${column.attrname}" :disabled="disabled" placeholder="${column.comments}" clearable type="number"></el-input>
    #elseif($column.attrType=='Double')
        <el-input v-model="dataForm.${column.attrname}" :disabled="disabled" placeholder="${column.comments}" clearable type="number"></el-input>
    #elseif($column.attrType=='BigDecimal')
        <el-input v-model="dataForm.${column.attrname}" :disabled="disabled" placeholder="${column.comments}" clearable type="number"></el-input>
    #elseif($column.attrType=='Boolean')
        <el-switch v-model="dataForm.${column.attrname}" :disabled="disabled" placeholder="${column.comments}" active-color="#13ce66" inactive-color="#ff4949" active-text="是" inactive-text="否"></el-switch>
    #elseif($column.attrType=='String')
        <el-input v-model="dataForm.${column.attrname}" :disabled="disabled" placeholder="${column.comments}" clearable></el-input>
    #elseif($column.attrType=='Date')
        <el-date-picker v-model="dataForm.${column.attrname}" :disabled="disabled" placeholder="${column.comments}" type="date"></el-date-picker>
#end
      </el-form-item>
#end
#end
    </el-form>
    <span slot="footer" class="dialog-footer">
      <el-button @click="visible = false">取消</el-button>
      <el-button v-if="!disabled" type="primary" @click="dataFormSubmit()">确定</el-button>
    </span>
  </el-dialog>
</template>

<script>
  export default {
    data () {
      return {
        disabled: false,
        visible: false,
        dataForm: {
#foreach($column in $columns)
#if($column.columnName == $pk.columnName)
          ${column.attrname}: '',
#else
          ${column.attrname}: ${column.columnDefault}#if($velocityCount != $columns.size()),
#end#end
#end
},
        dataRule: {
#foreach($column in $columns)
    #if($column.columnName != $pk.columnName)
        #if($column.required)
    ${column.attrname}: [{required: true, message: '${column.comments}不能为空', trigger: 'blur'}]#if($velocityCount != $columns.size()),
#end#end#end#end
        other: []
        }
      }
    },
  #set($id='${this.dataForm.'+$pk.columnName+'}')
    methods: {
      init (id, disabled) {
        this.disabled = disabled
        this.dataForm.$pk.columnName = id || ''
        this.visible = true
        this.$nextTick(() => {
          this.$refs['dataForm'].resetFields()
          if (this.dataForm.$pk.columnName) {
            this.$http({
              url: `/${pre}/${pathName}/info/$id`,
              method: 'get'
            }).then(({data}) => {
              if (data && data.code === 0) {
                this.dataForm = data.${pathName}
              }
            })
          }
        })
      },
      // 表单提交
      dataFormSubmit () {
        this.$refs['dataForm']
          .validate((valid) => {
            if (valid) {
              this.$http({
                url: `/${pre}/${pathName}/${!this.dataForm.$pk.columnName ? 'save' : 'update'}`,
                method: 'post',
                data: this.dataForm
              }).then(({data}) => {
                if (data && data.code === 0) {
                  this.$message({
                    message: '操作成功',
                    type: 'success',
                    duration: 1500
                  })
                  this.visible = false
                  this.$emit('refreshDataList')
                }
              })
            }
          })
      }
    }
  }
</script>
