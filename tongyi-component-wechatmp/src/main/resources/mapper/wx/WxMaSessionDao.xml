<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.modules.wx.dao.WxMaSessionDao">

    <sql id="selectSql">
        SELECT
        T.ID,
        T.TOKEN,
        T.SESSION_KEY,
        T.OPEN_ID,
        T.UNION_ID
        FROM WX_MA_SESSION T
        WHERE 1=1
        <if test="params.token != null and params.token.trim() != ''">
            AND T.TOKEN = '${params.token}'
        </if>
    </sql>

    <select id="selectWxMaSessionPage" resultType="com.platform.modules.wx.entity.WxMaSessionEntity">
        <include refid="selectSql"/>
    </select>

    <select id="queryAll" resultType="com.platform.modules.wx.entity.WxMaSessionEntity">
        <include refid="selectSql"/>
    </select>
</mapper>