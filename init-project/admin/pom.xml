<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>tongyi-component</artifactId>
        <groupId>com.tongyi</groupId>
        <version>1.0.0</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>tongyi-xxx-admin</artifactId>
    <version>1.0.0</version>
    <packaging>jar</packaging>

    <name>tongyi-xxx-admin</name>
    <url>http://www.wxngrok.com</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <component.version>1.0.0</component.version>
        <xxx.version>1.0.0</xxx.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.tongyi</groupId>
            <artifactId>tongyi-component-common</artifactId>
            <version>${component.version}</version>
        </dependency>
        <dependency>
            <groupId>com.tongyi</groupId>
            <artifactId>tongyi-module-sys</artifactId>
            <version>${component.version}</version>
        </dependency>
        <dependency>
            <groupId>com.tongyi</groupId>
            <artifactId>tongyi-module-gencode</artifactId>
            <version>${component.version}</version>
        </dependency>
        <dependency>
            <groupId>com.tongyi</groupId>
            <artifactId>tongyi-module-thirdstorage</artifactId>
            <version>${component.version}</version>
        </dependency>
        <dependency>
            <groupId>com.tongyi</groupId>
            <artifactId>tongyi-component-starter-admin</artifactId>
            <version>${component.version}</version>
        </dependency>
        <dependency>
            <groupId>com.tongyi</groupId>
            <artifactId>tongyi-xxx-service</artifactId>
            <version>${xxx.version}</version>
        </dependency>
    </dependencies>
        <profiles>
            <profile>
                <activation>
                    <activeByDefault>true</activeByDefault>
                </activation>
                <id>dev</id>
                <properties>
                    <package.environment>dev</package.environment>
                </properties>
            </profile>
            <profile>
                <id>prod</id>
                <properties>
                    <package.environment>prod</package.environment>
                </properties>
            </profile>
            <profile>
                <id>test</id>
                <properties>
                    <package.environment>test</package.environment>
                </properties>
            </profile>
        </profiles>
     <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <includes>
                    <include>**/*</include>
                </includes>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
         </plugins>
    </build>
</project>
