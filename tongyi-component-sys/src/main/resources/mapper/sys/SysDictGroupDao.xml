<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tongyi.modules.sys.dao.SysDictGroupDao">
    <sql id="selectSql">
        select
        t.id,
        t.code,
        t.name,
        t.create_time,
        t.remark
        from sys_dict_group t
        where 1=1
        <if test="params.code != null and params.code.trim() != ''">
            and t.code like '%${params.code}%'
        </if>
        <if test="params.name != null and params.name.trim() != ''">
            and t.name like '%${params.name}%'
        </if>
    </sql>

    <select id="selectSysDictGroupPage" resultType="com.tongyi.modules.sys.entity.SysDictGroupEntity">
        <include refid="selectSql"/>
    </select>

    <select id="queryAll" resultType="com.tongyi.modules.sys.entity.SysDictGroupEntity">
        <include refid="selectSql"/>
    </select>
</mapper>