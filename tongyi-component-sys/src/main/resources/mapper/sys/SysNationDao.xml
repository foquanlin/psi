<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tongyi.modules.sys.dao.SysNationDao">

    <sql id="selectSql">
        select
        t.code,
        t.name
        from sys_nation t
        where 1=1
        <if test="params.code != null and params.code != ''">
            and t.code like '%${params.code}%'
        </if>
        <if test="params.name != null and params.name != ''">
            and t.name like '%${params.name}%'
        </if>
    </sql>

    <select id="selectSysNationPage" resultType="com.tongyi.modules.sys.entity.SysNationEntity">
        <include refid="selectSql"/>
    </select>

    <select id="queryAll" resultType="com.tongyi.modules.sys.entity.SysNationEntity">
        <include refid="selectSql"/>
    </select>
</mapper>