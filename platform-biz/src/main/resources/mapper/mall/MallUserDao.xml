<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.modules.mall.dao.MallUserDao">

    <sql id="selectSql">
        SELECT
        T.ID,
        T.USER_NAME,
        T.PASSWORD,
        T.GENDER,
        T.BIRTHDAY,
        T.REGISTER_TIME,
        T.LAST_LOGIN_TIME,
        T.LAST_LOGIN_IP,
        T.USER_LEVEL_ID,
        T.NICKNAME,
        T.MOBILE,
        T.REGISTER_IP,
        T.HEAD_IMG_URL,
        T.OPEN_ID,
        T.QQ_OPEN_ID,
        T.MP_OPEN_ID,
        T.UNION_ID,
        T.SUBSCRIBE,
        T.SUBSCRIBE_TIME
        FROM MALL_USER T
        WHERE 1=1
        <if test="params.name != null and params.name.trim() != ''">
            AND T.USER_NAME LIKE '%${params.name}%'
        </if>
    </sql>

    <select id="selectMallUserPage" resultType="com.platform.modules.mall.entity.MallUserEntity">
        <include refid="selectSql"/>
    </select>

    <select id="queryAll" resultType="com.platform.modules.mall.entity.MallUserEntity">
        <include refid="selectSql"/>
    </select>
</mapper>
